{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "name": "John West",
            "type": "standard",
            "available": true,
            "email": "john.west@email.com",
            "phoneNo": "(262)665-1234",
            "address": "3701 Durand Ave, Racine, WI 53405",
            "location": "42.6958751,-87.8227568"
        }
    ],
    "required": [
        "name",
        "type",
        "available",
        "email",
        "phoenNo"
       
    ],
    "properties": {
        "name": {
            "$id": "#/properties/Name",
            "type": "string",
            "minLength": 5,
            "title": "Name of the user",
            "description": "unique name per user",
            "default": "",
            "examples": [
                "Donold Walker Jr."
            ]
        },
        "type": {
            "$id": "#/properties/Type",
            "type": "string",
            "enum": ["S","V","D"],
            "title": "Type of User ",
            "description": "S:Subscriber, V:Volunteer, D:Donor",
            "default": "",
            "examples": [
                "V"
            ]
        },
        "address": {
            "$id": "#/properties/Address",
            "type": "string",
            "title": "The Address schema",
            "description": "Complete address with City, State and Zipcode",
            "default": "",
            "examples": [
                "3701 Durand Ave, Racine, WI 53405"
            ]
        },
        "phoneNo": {
            "$id": "#/properties/Phone%20No",
            "type": "string",
            "pattern": "^(\\([0-9]{3}\\))?[0-9]{3}-[0-9]{4}$",
            "title": "The Phone_No schema",
            "description": "Optional Phone #",
            "default": "",
            "examples": [
                "(262)598-0693"
            ]
        },
        "location": {
            "$id": "#/properties/Location",
            "type": "object",
            "title": "Longitude and Latitude Values",
            "description": "A geographical coordinate.",
            "required": [ "latitude", "longitude" ],
            "properties": {
                "latitude": {
                  "type": "number",
                  "minimum": -90,
                  "maximum": 90
                },
                "longitude": {
                  "type": "number",
                  "minimum": -180,
                  "maximum": 180
                }
              },
            "examples": [
                {
                    "latitude": 42.6958751,
                    "longitude": -87.8227568}
                ]
        }
    },
    "additionalProperties": false
}